 	{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/security",
	"type": "object",

	"permissions": {
		"type": "object",
		"properties":{
			"System User": {
				"title": "Systémový používateľ",
				"type": "boolean",
				"default": true
			},
			"System Admin": {
				"title": "Systémový administátor",
				"type": "boolean",
				"default": true
			},

			"Registry - read": {
				"title": "Zobrazenie dát registrov",
				"type": "boolean",
				"default": true
			},
			"Registry - write": {
				"title": "Modifikácia dát registrov",
				"type": "boolean",
				"default": true
			},
			"Security - read": {
				"title": "Zobrazenie dát zabezpečenia",
				"type": "boolean",
				"default": true
			},
			"Security - write": {
				"title": "Modifikácia dát zabezpečenia",
				"type": "boolean",
				"default": true
			},
			"Portal - write": {
				"title": "Modifikácia portalu",
				"type": "boolean",
				"default": true
			}
		}
	},
	"login": {
		"properties": {
			"loginName": {
				"title": "Prihlasovacie meno",
				"type": "string"
			},
			"passwordHash": {
				"title": "Hash hesla",
				"description": "",
				"type": "string"
			},
			"salt": {
				"title": "Salt pre hash hesla",
				"description": "",
				"type": "string"
			}
		}
	},
	"systemCredentials": {
		"type": "object",
		"properties": {
			"login": {
				"$ref": "uri://registries/security#login"
			},
			"permissions": {
				"$ref": "uri://registries/security#permissions"
			},
			"groups": {
				"type": "array",
				"items": {
					"id": "string"
				}
			},
			"profiles": {
				"type": "array",
				"items": {
					"id": "string"
				}
			}
		}
	},
	"profiles": {
		"type": "object",
		"table": "securityProfiles",
		"title": "Security Profiles",
		"security": {
			"create": {
				"static": [
					"Security - write"
				]
			},
			"read": {
				"static": [
					"Security - read"
				]
			},
			"modify": {
				"static": [
					"Security - write"
				]
			}
		},
		"listFields": [
			{
			"field": "baseData.name",
			"title": "Názov profilu",
			"transCode":"schema.security.listFields.name"
			}
		],
		"properties": {
			"baseData": {
				"title": "Základné údaje",
				"transCode":"schema.security.baseData",
				"type": "object",
				"properties": {
					"name": {
						"title": "Názov profilu",
						"transCode": "schema.security.baseData.name",
						"type": "string",
						"required": true
					}
				}
			},
			"security": {
				"properties":{
					"permissions": {
						"$ref": "uri://registries/security#permissions"
					},
					"groups": {
						"type": "array",
						"items": {
							"id": "string"
						}
					},
					"forcedCriteria": {
						"type": "array",
						"items": {
							"applySchema": "string",
							"crits": {
								"type": "array",
								"items": {
									"f": "string",
									"op": "string",
									"v": "string",
									"obj":{
										"refData": {
											"type":"object",
											"properties":{
												"name":"string"
											}
										}
									},
									"expr": "string"
								}
							}
						}
					}
				}
			}
		}
	}
}
